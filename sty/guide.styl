
// colors

c = {}
for key, value in data.colors
  c[key] = convert(value)

f = {}
for key, value in data.fonts
  f[key] = unquote(value)

.guide
  padding 20px 0 0 0 

  > .sections
    padding 20px
    > .section
      width 33%
      float left
      > .title
        font: f.h3
        padding 0 0 0 10px

      > .color
        padding 10px 20px
        margin 5px
        color: c.white1
        for name, color in data.colors
          &.color_{name}
            background-color: convert(color)
            if dark(convert(color))
              border: 1px solid c.white1
              color: c.white1
            else
              border: 1px solid c.black1
              color: c.black1
      > .font
        padding 10px 20px
        background-color: c.white1
        overflow-x scroll
        for name, font in data.fonts
          &.font_{name}
            font: unquote(font)
 
