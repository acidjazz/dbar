
white1 = #ffffff
grey1 = #e5e5e6
color1 = #434965

.dbar
  position fixed
  top 0
  left 0
  width 100%
  height 20px
  background-color: grey1
  transition height 0.1s linear
  &.off
    transform translate(0, -20px)
    transition transform 0.2s ease-in-out 0.5s
  &.on
    transform translate(0, 0px)
    transition transform 0.2s linear 0s
  > .inner
    position relative
    width 100%
    height 100%
    > .gradient
      position absolute
      background: linear-gradient(90deg, rgba(grey1, 1), rgba(white1, 0.5))
      width 100%
      height 100%
      animation loader-gradient 2s 0s ease-in-out infinite
    > .full
      position absolute
      width 0%
      height 100%
      background-color: color1
      transition width 0.3s linear, background-color 0.2s linear

@keyframes loader-gradient
  from
    left -100%
  to
    left 100%

